                    android:id="@+id/search_Edittext2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/search_edittext_selector"
                    android:drawableLeft="@drawable/zoom"
                    android:drawableStart="@drawable/zoom"
                    android:hint="@string/search_hint"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/search_rl1_jia2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/search_Edittext2"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/jiadidian_button"
                    android:contentDescription="@string/app_name" />

                <ImageButton
                    android:id="@+id/search_rl1_jian2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/search_Edittext2"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/search_rl1_jia2"
                    android:layout_toStartOf="@+id/search_rl1_jia2"
                    android:background="@drawable/jiandidian_button"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/search_relativelayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <AutoCompleteTextView
                    android:id="@+id/search_Edittext3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/search_edittext_selector"
                    android:drawableLeft="@drawable/zoom"
                    android:drawableStart="@drawable/zoom"
